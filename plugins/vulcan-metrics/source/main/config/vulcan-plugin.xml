<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean name="plugin" class="net.sourceforge.vulcan.metrics.XmlMetricsPlugin"
			init-method="init">
		<property name="buildOutcomeCache">
			<ref parent="buildOutcomeCache"/>
		</property>
		<property name="eventHandler">
			<ref parent="eventHandler"/>
		</property>
		<property name="fileScanner">
			<ref bean="fileScanner"/>
		</property>
		<property name="transfomSources">
			<list>
				<value>net/sourceforge/vulcan/metrics/resources/unit-test.xsl</value>
				<value>net/sourceforge/vulcan/metrics/resources/code-coverage.xsl</value>
			</list>
		</property>
		<property name="transformerFactory">
			<bean class="javax.xml.transform.TransformerFactory" factory-method="newInstance"/>
		</property>
	</bean>
	
	<bean id="fileScanner" class="net.sourceforge.vulcan.metrics.scanner.ant.AntFileScanner">
	</bean>
	
	<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>net.sourceforge.vulcan.metrics.resources.application</value>
			</list>
		</property>
	</bean>
</beans>
