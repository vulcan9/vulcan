<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean name="plugin" class="net.sourceforge.vulcan.jabber.JabberPlugin">
		<property name="client">
			<bean class="net.sourceforge.vulcan.jabber.XmppClient">
				<property name="eventHandler">
					<ref parent="eventHandler"/>
				</property>
			</bean>
		</property>
		<property name="screenNameResolver">
			<bean class="net.sourceforge.vulcan.jabber.DictionaryScreenNameResolver"/>
		</property>
	</bean>
	
	<bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>i18n/jabber-messages</value>
			</list>
		</property>
		<property name="cacheSeconds" value="${i18n.cache.seconds}"/>
	</bean>
</beans>
